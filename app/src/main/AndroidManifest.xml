<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.capstone.photoshare">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="Back"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.capstone.photoshare.MainActivity" />
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.capstone.photoshare.MainActivity" />
        </activity>
        <activity android:name=".ShowPictureActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".PictureGridActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".TestOutput" />
        <activity android:name=".PhotoAlbumActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".FriendsListActivity"
                  android:screenOrientation="portrait"/>
    </application>

</manifest>
